<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="MainActivity"
    android:layout_weight="6"
    android:background="#FFE4E1">

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="405dp"
        android:layout_height="248dp"
        android:layout_marginTop="112dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/p1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="395dp"
        android:layout_height="239dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/p2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton12" />


    <Button
        android:id="@+id/linkedin"
        android:layout_width="209dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/my_linkedin_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton13" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginEnd="56dp"
        android:adjustViewBounds="true"
        android:background="#FFE4E1"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/linkedinicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linkedin"
        app:layout_constraintTop_toBottomOf="@+id/imageButton13"
        app:layout_constraintVertical_bias="0.534" />
</androidx.constraintlayout.widget.ConstraintLayout>
